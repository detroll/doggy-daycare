

<p>
  <strong>Name:</strong>
  <%= @dog.name + " " + @dog.owner.last_name %>
</p>


<p>
  <strong>Owner:</strong>
  <%= @dog.owner.first_name + " " + @dog.owner.last_name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @dog.breed.breed %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @dog.dob.stamp("March 7, 1990") %>
</p>

<p>
  <strong>Allergies:</strong>
  <%= @dog.allergies %>
</p>

<p>
  <strong>Vet name:</strong>
  <%= @dog.vet_name %>
</p>

<p>
  <strong>Vet phone:</strong>
  <%= @dog.vet_phone %>
</p>

<p>
  <strong>In daycare:</strong>
  <%= @dog.in_daycare %>
</p>

<p>
 <%= image_tag @dog.avatar.url %>
 <%= image_tag @dog.avatar.url(:medium) %>
 <%= image_tag @dog.avatar.url(:thumb) %>
</p>


<%= link_to 'Edit', edit_dog_path(@dog), class: "btn btn-primary" %> 
<%= link_to 'Back', dogs_path, class: "btn btn-default" %>
